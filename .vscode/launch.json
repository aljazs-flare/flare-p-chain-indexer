    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Indexer",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/indexer/main/indexer.go",
            "args": ["-config", "${workspaceFolder}/config.local.toml"],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Launch Services",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/services/main/services.go",
            "args": ["-config", "${workspaceFolder}/config.local.toml"],
            "cwd": "${workspaceFolder}"
        }
    ]
}
